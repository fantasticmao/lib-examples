root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[*.go]
indent_style = tab
tab_width = 4

[*.java]
indent_size = 4

[{*.js, *.json}]
indent_size = 2

[*.http]
indent_size = 2

[{*.cql, *.ddl, *.sql}]
indent_size = 2

[*.md]
indent_size = 2