root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true

[{*.c,*.h}]
indent_size = 2

[*.go]
indent_style = tab
indent_size = 1
tab_width = 4

[*.java]
indent_size = 4

[{*.js,*.json,*.css}]
indent_size = 2

[*.py]
indent_size = 4

[*.proto]
indent_size = 2

[*.sh]
indent_size = 2

[{*.sql,*.cql,*.ddl}]
indent_size = 2

[{*.html,*.xml}]
indent_size = 4

[{*.yaml,*.yml}]
indent_size = 2

[*.init]
indent_size = 4

[*.http]
indent_size = 2

[*.md]
indent_size = 2
